{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "*": ["*", "*.ts"]
    }
  },
  "include": ["src/**/*"],
}
